<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorAccent">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_image_item"
            android:layout_marginLeft="12dp"
            android:textSize="19sp"
            android:textColor="@color/colorPrimary">
    </TextView>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_online"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:civ_border_color="#05df29"
            app:civ_border_width="12dp"
            android:src="@drawable/profile"
            android:layout_below="@+id/username"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="-18dp"
            android:layout_toEndOf="@id/profile_image_item"
            android:layout_toRightOf="@id/username"
            android:visibility="gone">

    </de.hdodenhof.circleimageview.CircleImageView>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_offline"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:civ_border_color="#bfbfbf"
            app:civ_border_width="12dp"
            android:src="@drawable/profile"
            android:layout_below="@+id/username"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="-18dp"
            android:layout_toEndOf="@id/profile_image_item"
            android:layout_toRightOf="@id/username"
            android:visibility="gone">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
            android:id="@+id/massage_last"
            android:layout_below="@id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:layout_toRightOf="@+id/profile_image_item"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxLines="1"
            >

    </TextView>

</RelativeLayout>